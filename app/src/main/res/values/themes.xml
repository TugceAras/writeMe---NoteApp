<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WriteMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tab_bar</item>
        <item name="colorPrimaryVariant">@color/button_color</item>
        <item name="colorOnPrimary">@color/background_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_color</item>
        <item name="colorSecondaryVariant">@color/button_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/tab_bar</item>

    </style>

    <style name="progressBar">
        <item name="colorSecondary">@color/button_color</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background" >@drawable/delete_sheet</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/bevan</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>